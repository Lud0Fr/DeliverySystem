{
  "ConnectionStrings": {
    "AppEntities": "Server=localhost\\SQLEXPRESS;Database=DeliverySystem;Trusted_Connection=True"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%/logs/deliverysystem-.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  }
}
